<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tasks_widget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="قائمة المهام"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/tasks_done_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/0 مكتمل"
            android:textColor="#CCFFFFFF"
            android:textSize="14sp"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>

    <ListView
        android:id="@+id/tasks_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="4dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tasks_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="لا توجد مهام حالياً"
        android:textColor="#CCFFFFFF"
        android:textSize="14sp"
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout>
