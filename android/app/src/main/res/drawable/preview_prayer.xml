<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A1A2E" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Header simulation -->
    <item android:top="12dp" android:left="12dp" android:right="12dp">
        <shape android:shape="rectangle">
            <solid android:color="#40FFFFFF" />
            <size android:height="8dp" android:width="100dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Time simulation -->
    <item android:top="30dp" android:left="12dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <size android:height="20dp" android:width="80dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Prayer Times Row -->
    <item android:bottom="12dp" android:left="12dp" android:right="12dp">
        <shape android:shape="rectangle">
            <solid android:color="#20FFFFFF" />
            <size android:height="30dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
