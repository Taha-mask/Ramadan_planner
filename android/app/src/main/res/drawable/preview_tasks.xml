<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A1A2E" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Header -->
    <item android:top="12dp" android:left="12dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <size android:height="12dp" android:width="120dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Task Items -->
    <item android:top="40dp" android:left="12dp" android:right="12dp">
        <shape android:shape="rectangle">
            <solid android:color="#10FFFFFF" />
            <size android:height="40dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <item android:top="90dp" android:left="12dp" android:right="12dp">
        <shape android:shape="rectangle">
            <solid android:color="#10FFFFFF" />
            <size android:height="40dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
