<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A1A2E" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Text Lines -->
    <item android:gravity="center" android:top="-20dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <size android:height="14dp" android:width="140dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <item android:gravity="center" android:top="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <size android:height="14dp" android:width="100dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Buttons Bottom -->
    <item android:gravity="bottom|left" android:bottom="12dp" android:left="30dp">
         <shape android:shape="oval">
            <solid android:color="#40FFFFFF" />
            <size android:width="32dp" android:height="32dp" />
        </shape>
    </item>
    
    <item android:gravity="bottom|right" android:bottom="12dp" android:right="30dp">
         <shape android:shape="oval">
            <solid android:color="#00A36C" />
            <size android:width="32dp" android:height="32dp" />
        </shape>
    </item>
</layer-list>
